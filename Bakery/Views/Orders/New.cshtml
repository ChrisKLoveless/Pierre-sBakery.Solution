@{
  Layout = "_Layout";
}

<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Add New Order</h1>
    </div>
    <h2>Fill out form to add order to @Model.Name</h2>

    <form action="/vendors/@Model.Id/orders" method="post">
      <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
      <label for="orderTitle">Title:</label>
      <input id="orderTitle" name="orderTitle" type="text"><br>
      <label for="orderDate">Date:</label>
      <input id="orderDate" name="orderDate" type="text"><br>
      <label for="orderDescription">Description:</label>
      <input id="orderDescription" name="orderDescription" type="text"><br>
      <label for="orderQuantity">Quantity:</label>
      <input id="orderQuantity" name="orderQuantity" type="number"><br>
      <label for="orderPrice">Price by Unit: $</label>
      <input id="orderPrice" name="orderPrice" type="number"><br>
      <button type='submit' class="btn btn-dark">Add Order</button>
    </form>

    <br>
    <div class="row col-4 float-right">
      <h4><a href='/vendors'>View Vendor List</a></h4>
      <br>
      <h4><a href='/'>Back to Homepage</a></h4>
    </div>
  </div>

</body>