@{
  Layout = "_Layout";
}
<body>
  @using Bakery.Models;
  <div class="container">
    <div class="jumbotron"><h1>Vendor List</h1></div>
    <h2>Active Vendors:</h2>
    <div class="row">
      @if (@Model.Count == 0)
      {
        <h3>No Vendors Added Yet!</h3>
      }

      @foreach(Vendor vendor in Model)
      {
        <ul>
            <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
            <p>@vendor.Info</p>
        </ul>
      }
    </div>

    <h4><a href='/vendors/new'>Add a new Vendor</a></h4>
    
    <h4><a href='/'>Back to Homepage</a></h4>

  </div>
</body>