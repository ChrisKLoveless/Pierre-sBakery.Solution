@{
  Layout = "_Layout";
}

<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Add a Vendor</h1>
    </div>
    <h2>Create new Vendor here:</h2>

    <form action="/vendors" method="post">
      <label for="vendorName">Vendor Name</label>
      <input id="vendorName" name="vendorName" type="text"><br>
      <label for="vendorInfo">Vendor Info</label>
      <input id="vendorInfo" name="vendorInfo" type="text"><br>
      <button type="submit" class="btn btn-dark">Add</button>
    </form>

    <div class="row col-4 float-right">
      <h4><a href='/vendors'>View Vendor List</a></h4>
      <br>
      <h4><a href='/'>Back to Homepage</a></h4>
    </div>

  </div>
</body>